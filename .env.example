# Base URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# AI Gateway - Get your API keys from the respective providers
AIMLAPI_API_KEY=your_aimlapi_key_here
AI_GATEWAY_API_KEY=vck_your_vercel_ai_gateway_key_here
OPENROUTER_API_KEY=sk_your_openrouter_key_here

# Authentication - Generate a secure secret
BETTER_AUTH_SECRET=your_secure_random_secret_here
BETTER_AUTH_URL=http://localhost:3000

# GitHub OAuth (optional) - Create an OAuth app at https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (optional) - Create credentials at https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# Telemetry Observability with Langsmith (optional)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=lsv2_your_langsmith_api_key
LANGSMITH_PROJECT=default